<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Light Mode -->
    <style name="Theme.JobCraft" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="textPrimaryColor">@color/black</item>
        <item name="textSecondaryColor">@color/darkGray</item>

        <item name="primaryBgColor">@color/white</item>
        <item name="secondaryBgColor">@color/blueViolet</item>

        <item name="appColor">@color/white</item>
        <item name="appBgColor">@color/blue</item>

        <item name="btnBgColor">@color/blue</item>
        <item name="btnTextColor">@color/white</item>

        <item name="primaryColor">@color/blue</item>
        <item name="secondaryColor">@color/blueViolet</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ForceDarkTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="textPrimaryColor">@color/white</item>
        <item name="textSecondaryColor">@color/lightGray</item>
    </style>
</resources>