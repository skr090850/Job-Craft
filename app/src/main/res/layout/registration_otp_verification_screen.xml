<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBgColor"
    tools:context=".registration.OtpVerificationScreen"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/verificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        >
        <ImageButton
            android:id="@+id/verificationBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_ic"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/verificationSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verificationTitle"
        android:text="Weâ€™ve send you the verification code on "
        android:fontFamily="@font/urbanist_bold"
        android:paddingHorizontal="20dp"
        android:layout_marginTop= "30dp"
        android:textSize="16sp"
        android:textColor="?attr/textSecondaryColor"
        />

    <TextView
        android:id="@+id/verificationEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verificationSubHeading"
        android:text=""
        android:fontFamily="@font/urbanist_bold"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="16sp"
        android:textColor="?attr/textPrimaryColor"
        />


    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verificationEmail">

        <EditText
            android:id="@+id/otpDigit1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/otp_edittext_background"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/textPrimaryColor"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otpDigit2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/otp_edittext_background"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/textPrimaryColor"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otpDigit3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/otp_edittext_background"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/textPrimaryColor"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otpDigit4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/otp_edittext_background"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/textPrimaryColor"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/otpScreenResetBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Reset Now"
        android:textColor="?attr/btnTextColor"
        android:textSize="20sp"
        android:fontFamily="@font/urbanist_bold"
        android:elevation="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otpScreenResetBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Code in 0:57 "
            android:textSize="15sp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="?attr/textSecondaryColor"
            />
        <TextView
            android:id="@+id/resendTextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="@color/blue"
            android:textSize="15sp"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>