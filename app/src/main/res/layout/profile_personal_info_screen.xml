<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/primaryBgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.PersonalInfoScreen"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/profilePersonalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >
        <ImageButton
            android:id="@+id/personalInfoBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_ic"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Up Profile"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/profilePersonalBtnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="?attr/textSecondaryColor"
            android:fontFamily="@font/urbanist_bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePersonalTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/profile_photo_bg"
                    android:padding="15dp"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/editProfileImageBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/camera_icon_bg"
                    android:contentDescription="Upload Profile Picture"
                    android:elevation="8dp"
                    android:src="@drawable/ic_camera"
                    app:layout_constraintBottom_toBottomOf="@+id/profileImageView"
                    app:layout_constraintEnd_toEndOf="@+id/profileImageView"
                    app:layout_constraintStart_toStartOf="@+id/profileImageView"
                    app:layout_constraintTop_toBottomOf="@+id/profileImageView" />
                <TextView
                    android:id="@+id/personalInfoHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/editProfileImageBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:text="Personal Information"
                    android:fontFamily="@font/urbanist_bold"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:textSize="18sp"
                    android:textColor="?attr/textPrimaryColor"
                    />
                <View
                    android:id="@+id/headingLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="?attr/textSecondaryColor"
                    app:layout_constraintTop_toBottomOf="@+id/personalInfoHeading"
                    android:layout_marginVertical="20dp"

                    />



                <LinearLayout
                    android:id="@+id/NameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/headingLine"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name "
                        android:textSize="18sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/urbanist_bold"
                        />
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePersonalNameInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="?attr/textSecondaryColor"
                    app:hintTextColor="?attr/textPrimaryColor"
                    app:cursorColor="?attr/textPrimaryColor"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeColor="@color/icon_selector"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/user_ic"
                    app:startIconTint="@color/icon_selector"
                    app:layout_constraintTop_toBottomOf="@id/NameLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePersonalName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColorHint="?attr/textSecondaryColor"
                        android:textColor="?attr/textPrimaryColor"
                        android:hint="Type your full name"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profilePersonalNameInputLayout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email "
                        android:textSize="18sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/urbanist_bold"
                        />
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePersonalEmailInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="?attr/textSecondaryColor"
                    app:hintTextColor="?attr/textPrimaryColor"
                    app:cursorColor="?attr/textPrimaryColor"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeColor="@color/icon_selector"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/sms_ic"
                    app:startIconTint="@color/icon_selector"
                    app:layout_constraintTop_toBottomOf="@id/emailLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePersonalEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColorHint="?attr/textSecondaryColor"
                        android:textColor="?attr/textPrimaryColor"
                        android:hint="Type your email"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/ContactLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profilePersonalEmailInputLayout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number "
                        android:textSize="18sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/urbanist_bold"
                        />
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePersonalContactInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="?attr/textSecondaryColor"
                    app:hintTextColor="?attr/textPrimaryColor"
                    app:cursorColor="?attr/textPrimaryColor"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeColor="@color/icon_selector"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/ic_call"
                    app:startIconTint="@color/icon_selector"
                    app:layout_constraintTop_toBottomOf="@id/ContactLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePersonalContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColorHint="?attr/textSecondaryColor"
                        android:textColor="?attr/textPrimaryColor"
                        android:hint="Type your contact number"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/dobLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profilePersonalContactInputLayout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textSize="18sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/urbanist_bold"
                        />
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePersonalDobInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="?attr/textSecondaryColor"
                    app:hintTextColor="?attr/textPrimaryColor"
                    app:cursorColor="?attr/textPrimaryColor"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeColor="@color/icon_selector"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/icon_selector"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toBottomOf="@id/dobLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profilePersonalDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColorHint="?attr/textSecondaryColor"
                        android:textColor="?attr/textPrimaryColor"
                        android:hint="Select date of birth"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/genderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profilePersonalDobInputLayout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="18sp"
                        android:textColor="?attr/textPrimaryColor"
                        android:fontFamily="@font/urbanist_bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/urbanist_bold"
                        />
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profilePersonalGenderInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="?attr/textSecondaryColor"
                    app:hintTextColor="?attr/textPrimaryColor"
                    app:cursorColor="?attr/textPrimaryColor"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeColor="@color/icon_selector"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_marginTop="4dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusTopStart="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconDrawable="@drawable/ic_gender"
                    app:startIconTint="@color/icon_selector"
                    app:endIconDrawable="@drawable/ic_arrow_down"
                    app:endIconTint="@color/icon_selector"
                    app:layout_constraintTop_toBottomOf="@id/genderLabel">

                    <AutoCompleteTextView
                        android:id="@+id/profilePersonalGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:textColorHint="?attr/textSecondaryColor"
                        android:textColor="?attr/textPrimaryColor"
                        android:hint="Select your gender"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profilePersonalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@id/profilePersonalGenderInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/btn_bg"
                    android:layout_marginTop="30dp"
                    android:text="Continue"
                    android:textColor="?attr/btnTextColor"
                    android:textSize="20sp"
                    android:fontFamily="@font/urbanist_bold"
                    android:elevation="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:indeterminateTint="?attr/btnBgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>