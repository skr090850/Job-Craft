<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/primaryBgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_and_onboarding.OnBoardingScreen">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboardingSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/onBoardingTabIndicator"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/onboardingSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabBackground="@drawable/dot_background_inset"
        android:background="@android:color/transparent"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/onBoardingBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_bg"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:text="Get Started"
        android:textColor="?attr/btnTextColor"
        android:textSize="20sp"
        android:fontFamily="@font/urbanist_bold"
        android:elevation="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>