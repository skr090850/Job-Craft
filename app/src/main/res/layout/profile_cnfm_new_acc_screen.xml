<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/primaryBgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.CnfmNewAccScreen"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/cnfmNewAccTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >
        <ImageButton
            android:id="@+id/cnfmNewAccBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_ic"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Account"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cnfmNewAccTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cnfmNewAccImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/profile_photo_bg"
                android:padding="15dp"
                android:src="@drawable/ic_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/welcmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cnfmNewAccImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Welcome"
                android:textColor="?attr/textSecondaryColor"
                android:gravity="center"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="16sp"
                android:layout_marginVertical="15dp"
                />


            <TextView
                android:id="@+id/cnfmNewAccName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/welcmText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:text="User Name"
                android:fontFamily="@font/urbanist_bold"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:textColor="?attr/textPrimaryColor"
                />
            <View
                android:id="@+id/headingLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?attr/textSecondaryColor"
                app:layout_constraintTop_toBottomOf="@+id/cnfmNewAccName"
                android:layout_marginVertical="20dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/headingLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="25dp"
                >
                <TextView
                    android:id="@+id/cnfmNewAccEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Email Id :-"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist_bold"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cnfmNewAccEmailLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/cnfmNewAccEmailLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="- - - - - - - -"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccContactLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cnfmNewAccEmailLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Contact :-"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist_bold"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cnfmNewAccContactLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/cnfmNewAccContactLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="- - - - - - - -"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccDobLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cnfmNewAccContactLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Date of Birth :-"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist_bold"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cnfmNewAccDobLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/cnfmNewAccDobLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="- - - - - - - -"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cnfmNewAccDobLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Gender :-"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist_bold"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cnfmNewAccGenderLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/cnfmNewAccGenderLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="- - - - - - - -"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccInterestLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cnfmNewAccGenderLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Interest :-"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist_bold"
                    />
                <TextView
                    android:id="@+id/cnfmNewAccInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/cnfmNewAccInterestLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/cnfmNewAccInterestLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="- - - - - - - -"
                    android:textSize="18sp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:fontFamily="@font/urbanist"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>









        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cnfmNewAccBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_bg"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:text="Create My Account"
        android:textColor="?attr/btnTextColor"
        android:textSize="20sp"
        android:fontFamily="@font/urbanist_bold"
        android:elevation="10dp"
        />
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:indeterminateTint="?attr/btnBgColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>