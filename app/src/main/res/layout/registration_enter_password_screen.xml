<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBgColor"
    tools:context=".registration.EnterPasswordScreen"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/verificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        >
        <ImageButton
            android:id="@+id/enterPasswordBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_ic"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/enterPasswordSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verificationTitle"
        android:text="Please enter your email address to request a password reset"
        android:fontFamily="@font/urbanist_bold"
        android:paddingHorizontal="20dp"
        android:layout_marginTop= "30dp"
        android:textSize="16sp"
        android:textColor="?attr/textSecondaryColor"
        />

    <LinearLayout
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterPasswordSubHeading"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password "
            android:textSize="18sp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:fontFamily="@font/urbanist_bold"
            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signInPasswordInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:textColorHint="?attr/textSecondaryColor"
        app:hintTextColor="?attr/textPrimaryColor"
        app:cursorColor="?attr/textPrimaryColor"
        app:cursorErrorColor="@color/red"
        app:boxStrokeColor="@color/icon_selector"
        app:boxStrokeErrorColor="@color/red"
        android:layout_marginTop="4dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/icon_selector"
        app:endIconDrawable="@drawable/ic_custom_password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordLabel"
        app:startIconDrawable="@drawable/lock_ic"
        app:startIconTint="@color/icon_selector"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterPasswordPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="?attr/textPrimaryColor"
            android:textColorHint="?attr/textSecondaryColor"
            android:hint="Type your password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/confpasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInPasswordInputLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password "
            android:textSize="18sp"
            android:textColor="?attr/textPrimaryColor"
            android:fontFamily="@font/urbanist_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:fontFamily="@font/urbanist_bold"
            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signInConfPasswordInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:textColorHint="?attr/textSecondaryColor"
        app:hintTextColor="?attr/textPrimaryColor"
        app:cursorColor="?attr/textPrimaryColor"
        app:cursorErrorColor="@color/red"
        app:boxStrokeColor="@color/icon_selector"
        app:boxStrokeErrorColor="@color/red"
        android:layout_marginTop="4dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/icon_selector"
        app:endIconDrawable="@drawable/ic_custom_password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confpasswordLabel"
        app:startIconDrawable="@drawable/lock_ic"
        app:startIconTint="@color/icon_selector"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterPasswordConfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="?attr/textPrimaryColor"
            android:textColorHint="?attr/textSecondaryColor"
            android:hint="Type your password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterPasswordResetBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/signInConfPasswordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Reset Now"
        android:textColor="?attr/btnTextColor"
        android:textSize="20sp"
        android:fontFamily="@font/urbanist_bold"
        android:elevation="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>