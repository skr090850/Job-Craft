<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/primaryBgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_and_onboarding.OnBoarding">

    <ImageView
        android:id="@+id/onBoardingImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/onBoardingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/onBoardingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:paddingHorizontal="20dp"
        android:textSize="30sp"
        android:textColor="?attr/textPrimaryColor"
        android:fontFamily="@font/urbanist_bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/onBoardingSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/onBoardingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:textSize="18sp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="?attr/textSecondaryColor"
        android:fontFamily="@font/urbanist"
        />

</androidx.constraintlayout.widget.ConstraintLayout>